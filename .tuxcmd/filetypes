[<file>]
FileTypeName=<file>
DefaultAction=0
NumActions=0

[<directory>]
FileTypeName=<directory>
DefaultAction=0
NumActions=0

[odt;pptx;ppt;doc;docx;ods;xls,xlsx;csv]
FileTypeName=LibreOffice document
DefaultAction=0
NumActions=1
Action0Name=LibreOffice
Action0Command=libreoffice "%s"
Action0RunInTerminal=0
Action0AutodetectGUI=0

[mp4;avi;mpeg;flv;mpg;wav]
FileTypeName=video
DefaultAction=0
NumActions=3
Action0Name=VLC
Action0Command=vlc %s
Action0RunInTerminal=0
Action0AutodetectGUI=0
Action1Name=ffplay
Action1Command=ffplay "%s" -autoexit -fs
Action1RunInTerminal=1
Action1AutodetectGUI=1
Action2Name=avidemux
Action2Command=avidemux "%s"
Action2RunInTerminal=0
Action2AutodetectGUI=1

[jpeg;jpg;png;bmp]
FileTypeName=image
DefaultAction=0
NumActions=1
Action0Name=Geeqie
Action0Command=geeqie "%s"
Action0RunInTerminal=0
Action0AutodetectGUI=1

[pdf]
FileTypeName=PDF document
