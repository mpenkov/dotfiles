#!/bin/sh
#
# fluxbox startup-script:
#
# Lines starting with a '#' are ignored.

# Change your keymap:
# xmodmap "/home/misha/.Xmodmap"

# Applications you want to run with fluxbox.
# MAKE SURE THAT APPS THAT KEEP RUNNING HAVE AN ''&'' AT THE END.
#
# unclutter -idle 2 &
# wmnd &
# wmsmixer -w &
# idesk &

# And last but not least we start fluxbox.
# Because it is the last app you have to run it with ''exec'' before it.

export LIBOVERLAY_SCROLLBAR=0

dropbox start
udisks-glue
gnome-sound-applet &
setxkbmap -layout "en,ru" -option "grp:alt_shift_toggle"
fbsetbg ~/Pictures/earth.jpg
ibus-daemon -rdx &
xscreensaver &
xrdb ~/.Xresources
xrdb ~/dotfiles/x11/solarized-dark.Xresources

#
# disable nautilus/gnome integration so that nautilus is useful
# (nautilus is called from tools such as blueman)
#
gconftool-2 -s -t bool /apps/nautilus/preferences/show_desktop false &
gconftool-2 -s -t bool /desktop/gnome/background/draw_background false &
gconftool-2 -s -t bool /apps/nautilus/preferences/show_advanced_permissions true &

#
# synchronize the two copy buffers used by Linux
#
autocutsel -fork &
autocutsel -selection PRIMARY -fork &

#
# useful applets
#
xfce4-power-manager &
xrdb ~/dotfiles/x11/solarized-dark.Xresources &
xxkb &

exec ssh-agent fluxbox
# or if you want to keep a log:
# exec fluxbox -log "/home/misha/.fluxbox/log"
